<?xml version="1.0" encoding="UTF-8"?>
<settings>
    <language id="text.configparser">
    	<name>ConfigParser</name>
        
        <!-- Define what syntax this language should use -->
        <!-- Note: root-zone will be deprecated in the next beta 
               and replaced by syntax-name -->
        <root-zone>text.configparser</root-zone>

        <!-- Human readable name for the language -->
        <name>ConfigParser</name>

        <!-- Ways to detect the language (see next section) -->
        <detectors>
        	<extension casesensitive="false">ini</extension>
        	<extension casesensitive="false">cfg</extension>
        </detectors>
        
    </language>
    
    <meta>
    	<name>ConfigParser</name>
    	<description>Understands configuration files following RFC 822 (see the Python ConfigParser module)</description>
    	<author>Trevor Fountain</author>
    	<identifier>net.texasexpat.Sugar.ConfigParser</identifier>
    	<url>http://www.texasexpat.net/posts/configparser.html</url>
    	<download format="zip">http://www.texasexpat.net/media/configparser.sugar.zip</download>
    </meta>
</settings>  